<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Tag_Kinetic>true</Tag_Kinetic>
  <Tag_Energy>false</Tag_Energy>
  <Tag_Guided>false</Tag_Guided>
  <Tag_Missile>false</Tag_Missile>
  <Tag_Plasma>false</Tag_Plasma>
  <Tag_Beam>false</Tag_Beam>
  <Tag_Intercept>false</Tag_Intercept>
  
  <Tag_Bomb>false</Tag_Bomb>
  
  <Tag_BioWeapon>false</Tag_BioWeapon>
  
  
  <Tag_Drone>false</Tag_Drone>
  <Tag_Torpedo>false</Tag_Torpedo>
  <Tag_Cannon>false</Tag_Cannon>

  <UID>MassDriver</UID>
  <FireDelay>10.0</FireDelay>
  <Range>9100</Range>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>13</OrdinanceRequiredToFire>

  <!-- name of XACT audio cue to play on firing this weapon -->
  <FireCueName>sd_weapon_railgun_massive_01</FireCueName>
  <DieCue>sd_explosion_ship_det_small</DieCue>


  <Scale>1.2</Scale>
  <!-- Projectile Information -->
  <DamageAmount>2200</DamageAmount>
  <EffectVsShields>1.15</EffectVsShields>
  <MuzzleFlash>Yes</MuzzleFlash>
  <ProjectileSpeed>1600</ProjectileSpeed>
  <ProjectileRadius>15</ProjectileRadius>
  <ExplosionRadius>45</ExplosionRadius> <!-- This Projectile Explodes -->
  <Light>Orange</Light>
  
  <Animated>1</Animated>
   <Frames>18</Frames>
  <AnimationPath>Kinetic_Orange/Kinetic_Orange_cc_</AnimationPath>
  <LoopAnimation>1</LoopAnimation>
  <ModelPath>projTear</ModelPath>
  <WeaponType>Ballistic Cannon</WeaponType>
  <!-- Effects are defined in 3DParticles/ParticleEffects.yaml -->
  <WeaponTrailEffect>SmokeTrail</WeaponTrailEffect>
  <WeaponHitEffect>Kinetic_Hit_Armor</WeaponHitEffect>
  <WeaponShieldHitEffect>Kinetic_Hit_Shield</WeaponShieldHitEffect>
  <WeaponDeathEffect></WeaponDeathEffect>

  <FireCone>0</FireCone>
</Weapon>
