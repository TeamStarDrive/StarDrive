  <Animated>1</Animated>
   <Frames>17</Frames>
  <AnimationPath>Kinetic_Red/Kinetic_Red_cc_</AnimationPath>
  <LoopAnimation>1</LoopAnimation>
  <ModelPath>projTear</ModelPath>
