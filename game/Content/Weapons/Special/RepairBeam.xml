<?xml version="1.0"?>
<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <UID>RepairBeam</UID>
  <IsBeam>true</IsBeam>
  <FireDelay>2.5</FireDelay>
  <Range>2000</Range>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>0</OrdinanceRequiredToFire>
  <!-- name of XACT audio cue to play on firing this weapon -->

  <FireCueName>sd_weapon_laser_large_alt_04</FireCueName>
  <ToggleSoundName>sd_weapon_beam_02</ToggleSoundName>
  
  
  <!-- Projectile Information -->
  <BeamTexture>beam_black</BeamTexture>

  <HitsFriendlies>true</HitsFriendlies>
  <DamageAmount>-10</DamageAmount>
  <BeamThickness>50</BeamThickness>
  <BeamPowerCostPerSecond>0</BeamPowerCostPerSecond>

  <!-- Effects are defined in 3DParticles/ParticleEffects.yaml -->
  <WeaponType>Energy Beam</WeaponType>
  <WeaponHitEffect></WeaponHitEffect>
  <WeaponDeathEffect></WeaponDeathEffect>

  
</Weapon>
