<?xml version="1.0"?>
<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Tag_Kinetic>false</Tag_Kinetic>
  <Tag_Energy>false</Tag_Energy>
  <Tag_Guided>true</Tag_Guided>
  <Tag_Missile>true</Tag_Missile>
  <Tag_Plasma>false</Tag_Plasma>
  <Tag_Beam>false</Tag_Beam>
  <Tag_Intercept>true</Tag_Intercept>
  
  <Tag_Bomb>false</Tag_Bomb>
  
  <Tag_BioWeapon>false</Tag_BioWeapon>
  
  
  <Tag_Drone>false</Tag_Drone>
  <Tag_Torpedo>false</Tag_Torpedo>
  <Tag_Cannon>false</Tag_Cannon>
  
  <ExcludesFighters>true</ExcludesFighters>  
  <ExcludesCorvettes>true</ExcludesCorvettes>    
  <UID>CPMissileMirv</UID>

  <HitPoints>50</HitPoints>
  <FireDelay>6</FireDelay>
  <Range>4000</Range>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>8</OrdinanceRequiredToFire>
  
<!-- Projectile stats -->
  <DamageAmount>1000</DamageAmount>
  <ProjectileSpeed>1600</ProjectileSpeed>
  <ExplosionRadius>60</ExplosionRadius> <!-- This Projectile Explodes -->
  <DelayedIgnition>0.5</DelayedIgnition>
  
  <ProjectileRadius>10</ProjectileRadius>
  <RotationRadsPerSecond>1</RotationRadsPerSecond>
<!--Projectile atributes-->
  <EffectVsShields>1</EffectVsShields>
  <EffectVsArmor>1.2</EffectVsArmor>
  <Scale>2</Scale>
  
  <CanCollideProjectiles>true</CanCollideProjectiles>

  <ProjectileTexturePath>LRM_d</ProjectileTexturePath>
  <ModelPath>LRM</ModelPath>

  <!-- Effects are defined in 3DParticles/ParticleEffects.yaml -->
  <WeaponType>Missile</WeaponType>
  <WeaponHitEffect></WeaponHitEffect>
  <WeaponDeathEffect></WeaponDeathEffect>
  <WeaponTrailEffect>RocketTrail</WeaponTrailEffect>

<!-- name of XACT audio cue to play on firing this weapon -->
  <FireCueName>sd_weapon_missile_heavy_01</FireCueName>
  <DieCue>sd_weapon_rocket_explode_01</DieCue>
  <InFlightCue>sd_weapon_rocket_flight_01</InFlightCue>
</Weapon>
