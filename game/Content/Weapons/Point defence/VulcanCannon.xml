<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Tag_Kinetic>true</Tag_Kinetic>
  <Tag_Energy>false</Tag_Energy>
  <Tag_Guided>false</Tag_Guided>
  <Tag_Missile>false</Tag_Missile>
  <Tag_Hybrid>false</Tag_Hybrid>
  <Tag_Beam>false</Tag_Beam>
  <Tag_Intercept>false</Tag_Intercept>
  <Tag_Explosive>false</Tag_Explosive>
  <Tag_Bomb>false</Tag_Bomb>
  <Tag_Railgun>false</Tag_Railgun>
  <Tag_BioWeapon>false</Tag_BioWeapon>
  <Tag_Warp>false</Tag_Warp>
  <Tag_Subspace>false</Tag_Subspace>
  <Tag_Drone>false</Tag_Drone>
  <Tag_Torpedo>false</Tag_Torpedo>
  <Tag_Cannon>true</Tag_Cannon>
  <Tag_PD>true</Tag_PD> 
  <TruePD>true</TruePD>

  <OffPowerMod>3</OffPowerMod>
  
  <UID>VulcanCannon</UID>
  <FireDelay>3</FireDelay>
  <Range>3000</Range>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>0.02</OrdinanceRequiredToFire>
  <SalvoCount>6</SalvoCount>
  <SalvoTimer>0.5</SalvoTimer>
  
  <!-- name of XACT audio cue to play on firing this weapon -->
  <FireCueName>sd_weapon_vulcan_burst_01</FireCueName>
  <PlaySoundOncePerSalvo>true</PlaySoundOncePerSalvo>
 <!-- <ToggleSoundName>sd_weapon_vulcan_spinloop_01</ToggleSoundName> -->

  <!-- Projectile Information -->
  <DamageAmount>1</DamageAmount>
  <Scale>.7</Scale>
  <MuzzleFlash>Yes</MuzzleFlash>
  <ProjectileSpeed>1450</ProjectileSpeed>
  <ProjectileRadius>30</ProjectileRadius> 
  
  <Explodes>false</Explodes>
  <ProjectileTexturePath>projPulse_01_yellow_1_small</ProjectileTexturePath>
  <ModelPath>projTear</ModelPath>

  <!-- Effects are defined in 3DParticles/ParticleEffects.yaml -->
  <WeaponType>AA Weapons</WeaponType>
  <WeaponHitEffect></WeaponHitEffect>
  <WeaponDeathEffect></WeaponDeathEffect>

  <FireCone>2</FireCone>

</Weapon>
