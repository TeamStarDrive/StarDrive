<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Tag_Kinetic>true</Tag_Kinetic>
  
  <Tag_Cannon>true</Tag_Cannon>
  <Tag_PD>true</Tag_PD> 
  <TruePD>true</TruePD>  

  <OffPowerMod>6</OffPowerMod>
  
  <UID>FlakAA Cannon</UID>
  <FireDelay>0.5</FireDelay>
  <TargetChangeTimer>0.5</TargetChangeTimer>
  <SalvoCount>1</SalvoCount> 
  <Range>4000</Range>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>0.6</OrdinanceRequiredToFire>

  <!-- name of XACT audio cue to play on firing this weapon -->
  <FireCueName>sd_weapon_flakcannon_01</FireCueName>
  <PlaySoundOncePerSalvo>false</PlaySoundOncePerSalvo>
  <DieCue>sd_weapon_flakcannon_explode_01</DieCue>
  <!-- Projectile Information -->
  <DamageAmount>20</DamageAmount>
  <Scale>0.8</Scale>
  <MuzzleFlash>Yes</MuzzleFlash>
  <ProjectileSpeed>2000</ProjectileSpeed>
  <ProjectileRadius>45</ProjectileRadius>  
  <ExplosionRadius>20</ExplosionRadius> <!-- This Projectile Explodes -->
  
  <ProjectileTexturePath>projTear_02_purple_dual</ProjectileTexturePath>
  <ModelPath>projTear</ModelPath>
  <!--the projectile count is spread over the fire arc-->
  <FireCone>0</FireCone>

  <!-- Effects are defined in 3DParticles/ParticleEffects.yaml -->
  <WeaponType>AA Weapons</WeaponType>
  <WeaponHitEffect></WeaponHitEffect>
  <WeaponDeathEffect></WeaponDeathEffect>

</Weapon>
