  <UID>DualFlak</UID>
  <fireDelay>2.4</fireDelay>
  <Range>2500</Range>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>2.25</OrdinanceRequiredToFire>

  <!-- name of XACT audio cue to play on firing this weapon -->
  <fireCueName>sd_weapon_flakcannon_01</fireCueName>
  <dieCue>sd_weapon_flakcannon_explode_01</dieCue>
  <!-- Projectile Information -->
  <DamageAmount>150</DamageAmount>
  <MuzzleFlash>Yes</MuzzleFlash>
  <ProjectileSpeed>700</ProjectileSpeed>


  <FakeExplode>true</FakeExplode>
  <DamageRadius>15</DamageRadius>
    
  <ProjectileRadius>80</ProjectileRadius>

  <ProjectileTexturePath>projTear_03_orange</ProjectileTexturePath>
  <ModelPath>projTear</ModelPath>
  <ProjectileCount>3</ProjectileCount>
  <!--the projectile count is spread over the fire arc-->
  <FireArc>10</FireArc>
  <WeaponType>Ballistic Cannon</WeaponType>
