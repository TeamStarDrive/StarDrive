<?xml version="1.0"?>
<Weapon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Tag_Kinetic>false</Tag_Kinetic>
  <Tag_Energy>false</Tag_Energy>
  <Tag_Guided>true</Tag_Guided>
  <Tag_Missile>false</Tag_Missile>
  <Tag_Hybrid>false</Tag_Hybrid>
  <Tag_Beam>false</Tag_Beam>
  <Tag_Intercept>true</Tag_Intercept>
  <Tag_Explosive>true</Tag_Explosive>
  <Tag_Bomb>false</Tag_Bomb>
  <Tag_BioWeapon>false</Tag_BioWeapon>
  <Tag_Warp>false</Tag_Warp>
  <Tag_Subspace>false</Tag_Subspace>
  <Tag_Drone>false</Tag_Drone>
  <Tag_Torpedo>true</Tag_Torpedo>

 <ExcludesFighters>true</ExcludesFighters>  


  <UID>BasicTorpedo</UID>
  <FireDelay>24</FireDelay>
  <Range>18000</Range>
  <HitPoints>45</HitPoints>
  <PowerRequiredToFire>0</PowerRequiredToFire>
  <OrdinanceRequiredToFire>95</OrdinanceRequiredToFire>
  
  <!-- name of XACT audio cue to play on firing this weapon -->
  <FireCueName>sd_weapon_torpedo_01</FireCueName>
  <InFlightCue>sd_weapon_rocket_flight_01</InFlightCue>
  <DieCue>Explo1</DieCue>
  
  
  <!-- Projectile Information -->
  <DamageAmount>13500</DamageAmount>
  <ProjectileSpeed>1000</ProjectileSpeed>
  <DamageRadius>200</DamageRadius>
  <Explodes>true</Explodes>
  <ModelPath>torpedo</ModelPath>
  <ProjectileTexturePath>torpedo_d</ProjectileTexturePath>
  <WeaponType>Missile</WeaponType>
  <ProjectileRadius>12</ProjectileRadius>
  <CanCollideProjectiles>true</CanCollideProjectiles>

  <!-- Deterimines trail effect from ParticleEffects.yaml and also the trail offset behind missile center -->
  <WeaponEffectType>TorpTrail</WeaponEffectType>
  <TrailOffset>-32</TrailOffset>
</Weapon>
